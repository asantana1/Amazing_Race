import javax.swing.JFrame;

/** 
 *  This class is the driver which holds a frame with the RacePanel 
 *  @author Anderson Santana
 *  @author Shaunt Keshishian
 *  @version 1.1
 */ 
public class RaceTester
{
  /**
   * This is the main method.
   * @param args Unused 
   */
  public static void main(String[] args)
  {
    JFrame frame = new JFrame("Amazing Race");
    frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    RacePanel racePanel = new RacePanel();
    
    frame.getContentPane().add(racePanel);
    frame.pack();
    frame.setResizable(false);
    frame.setVisible(true);
  }
}